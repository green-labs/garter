{
  "name": "@greenlabs/garter",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": [
    "rescript"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@dusty-phillips/rescript-zora": "^5.0.1",
    "@rescript/core": "1.6.1",
    "@rescript/runtime": "^12.0.0",
    "onchange": "^7.1.0",
    "pta": "^1.2.0",
    "rescript": "^12.0.0",
    "tap-difflet": "^0.7.2",
    "zora": "^6.0.0"
  },
  "files": [
    "rescript.json",
    "src/*.res",
    "src/*.resi"
  ],
  "scripts": {
    "clean": "rescript clean",
    "build": "rescript build",
    "watch": "rescript watch",
    "test:watch": "onchange --initial '{test,src}/**/*.mjs' -- pta 'test/__tests__/**/*.mjs' | tap-difflet",
    "test": "pta './test/__tests__/Index.mjs' | tap-difflet",
    "release": "pnpm build && pnpm changeset publish"
  },
  "packageManager": "pnpm@10.24.0"
}
